#include<stdio.h>

int main()
{
    int i, a[100], p, h=0;

    for(int i=0; i<100; i++)
    {
        scanf("%d",&a[i]);
    }


    for(int i=1; i<100; i++)
    {
        if(a[i] > h)
        {
            h = a[i];
            p = i+1;
        }
    }

    printf("%d\n",h);
    printf("%d\n",p);


}
